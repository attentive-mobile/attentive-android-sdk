<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.attentive.example_kotlin.activities.MainActivity"
        android:id="@+id/mainActivity">

    <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="81dp"
            android:layout_marginTop="200dp"
            android:onClick="startLoadCreativeActivity"
            android:text="@string/push_me_for_next_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UsingOnClickInXml" />

    <Button
            android:id="@+id/identifyButton"
            android:layout_width="300dp"
            android:layout_height="81dp"
            android:layout_marginTop="500dp"
            android:onClick="identifyUser"
            android:text="@string/push_me_to_identify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UsingOnClickInXml" />

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="300dp"
            android:layout_height="81dp"
            android:layout_marginTop="400dp"
            android:onClick="logoutUser"
            android:text="@string/push_me_to_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UsingOnClickInXml" />

    <Button
            android:id="@+id/productPageButton"
            android:layout_width="300dp"
            android:layout_height="81dp"
            android:layout_marginTop="300dp"
            android:onClick="startProductPageActivity"
            android:text="@string/push_me_for_product_page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UsingOnClickInXml" />

    <TextView
            android:text="Domain: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/domainLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            tools:layout_editor_absoluteX="179dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/domainValue"
            tools:layout_editor_absoluteX="205dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>